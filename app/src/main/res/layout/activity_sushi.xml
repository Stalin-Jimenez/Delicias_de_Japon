<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.sushi"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sushi"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/acento"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/sushi"
            android:layout_marginTop="10dp"/>

        <ListView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/Sushi"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/blaco"
            android:layout_marginBottom="80dp"/>


        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/acento"
            android:text="Realizar Pedido"
            android:textSize="20dp"
            android:textColor="@color/blaco"
            android:textStyle="bold"
            android:id="@+id/BtnRegistrar_S"
            android:onClick="Pedido"/>



    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>